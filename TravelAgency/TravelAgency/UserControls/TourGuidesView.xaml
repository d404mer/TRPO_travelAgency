<UserControl x:Class="TravelAgency.UserControls.TourGuideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgency.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>

        <!-- DataGrid для отображения данных о гидах -->
        <DataGrid x:Name="TourGuidesDataGrid" Margin="10,10,10,10"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" 
                  RowHeaderWidth="0"
                  SelectionChanged="TourGuidesDataGrid_SelectionChanged"
                  MouseDoubleClick="TourGuidesDataGrid_MouseDoubleClick"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Тура" Binding="{Binding Tour_ID}" Width="Auto"/>
                <DataGridTextColumn Header="ID Гида" Binding="{Binding Guid_ID}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель с кнопками для добавления/удаления связи туров и гидов -->
        <StackPanel Orientation="Horizontal" Margin="10,7,10,0" VerticalAlignment="Top" Grid.Row="1">
            <Button Content="Добавить связь" Click="AddTourGuideButton_Click" Margin="5"/>
            <Button Content="Удалить связь" Click="DeleteTourGuideButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
