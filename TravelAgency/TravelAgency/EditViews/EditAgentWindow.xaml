<Window x:Class="TravelAgency.EditViews.EditAgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.EditViews"
        mc:Ignorable="d"
        Title="EditAgentWindow" Height="450" Width="800"  Background="{StaticResource PrimaryBrush}" >
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Foreground="White" FontWeight="Bold" Text="Логин агента:" />
            <TextBox x:Name="AgentNameTextBox" IsReadOnly="True"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Имя:" />
            <TextBox x:Name="NameTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Фамилия:" />
            <TextBox x:Name="LastNameTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Роль:" />
            <TextBox x:Name="AgentTypeTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Email:" />
            <TextBox x:Name="EmailTextBox"/>

            <Button Margin="0,10,0,0" Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
