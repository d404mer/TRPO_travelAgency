<Window x:Class="TravelAgency.EditViews.HotelEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.EditViews"
        mc:Ignorable="d"
        Title="Редактировать отель" Height="450" Width="800" Background="{StaticResource PrimaryBrush}">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Foreground="White" FontWeight="Bold" Text="Название отеля:" />
            <TextBox x:Name="HotelNameTextBox" />

            <TextBlock Foreground="White" FontWeight="Bold" Text="Количество звезд:" />
            <TextBox x:Name="StarsTextBox" />

            <TextBlock Foreground="White" FontWeight="Bold" Text="Цена за ночь:" />
            <TextBox x:Name="PricePerNightTextBox" />

            <Button Margin="0,10,0,0" Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
