<Window x:Class="TravelAgency.AddViews.AddAgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.AddViews"
        mc:Ignorable="d"
        Title="AddAgentWindow" Height="450" Width="800"  Background="{StaticResource PrimaryBrush}" >
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Foreground="White" FontWeight="Bold" Text="Логин агента:" />
            <TextBox x:Name="AgentNameTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Имя:" />
            <TextBox x:Name="NameTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Фамилия:" />
            <TextBox x:Name="LastNameTextBox"/>

            <TextBlock  Foreground="White" FontWeight="Bold" Text="Роль:" />
            <TextBox x:Name="RoleTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Email:" />
            <TextBox x:Name="EmailTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Пароль:" />
            <PasswordBox x:Name="PasswordTextBox" Margin="0,5,0,0"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
