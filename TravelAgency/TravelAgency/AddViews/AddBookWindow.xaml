<Window x:Class="TravelAgency.AddViews.AddBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.AddViews"
        mc:Ignorable="d"
        Title="AddBookingWindow" Height="450" Width="800" Background="{StaticResource PrimaryBrush}" >
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Foreground="White" FontWeight="Bold" Text="ID агента:" />
            <TextBox x:Name="AgentIDTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="ID тура:" />
            <TextBox x:Name="TourIDTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Дата бронирования:" />
            <DatePicker x:Name="BookingDatePicker"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="ID отеля (необязательно):" />
            <TextBox x:Name="HotelIDTextBox"/>

            <TextBlock Foreground="White" FontWeight="Bold" Text="Цена:" />
            <TextBox x:Name="PriceTextBox"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
